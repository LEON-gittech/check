/* pages/student/approve/approve.wxss */
.wrapper{
    margin: 30rpx;
    width: 100%;
    display: inline;
    border-radius: 30rpx;
}

.uploadContainer{
    width: 100%;
    display: flex;
    align-items: start;
    margin: 30rpx;
}

.title{
    margin-left: 30rpx;
    width: 200rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.input{
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
  padding-left: 30rpx;
}

.uploadButton{
  outline-style: solid;
  outline-color: transparent;
  box-shadow: 0 0 0 4rpx #5a01a7;
  transition: 0.7s;

  margin-top: 110%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 50rpx;
  border-radius: 40rpx;
  background-color: #f0f1ff;
  color: black;
  text-align: center;
  width: 600rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100rpx;
  justify-content: center;
}