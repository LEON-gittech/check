/* pages/user.wxss */
.userAvatar{
    overflow: hidden;
    height: 256rpx;
    width: 256rpx;
    margin: 20rpx;
    border-radius: 50%;
    outline-style: solid;

    outline-color: transparent;
    box-shadow: 0 0 0 4rpx #5a01a7;
    transition: 0.7s;
}

.userNickName{
    width: 100%;
    justify-items: center;
    text-align: center;
    margin: 20rpx;
}

.userHeader{
  flex-direction: column;
  width: 100%;
  display: inline;
}

.header{
  float: left;
  width: 300rpx;
  margin-top: 0;
  margin-left: 70rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.info-header{
  outline-style: solid;
  outline-color: transparent;
  box-shadow: 0 0 0 4rpx #5a01a7;
  transition: 0.7s;
  
  background-color: #f0f1ff;
  border-radius: 30rpx;
  margin-top: 15rpx;
  width: 250rpx;
  text-align: center;
  color: black;

  margin-bottom: auto;
  margin-top: 30rpx; 
  height: 100rpx; 
  display: flex; 
  flex-direction: column; 
  justify-content: center;
}


.userAvatarContainer{
  float: left;
  margin-left: 30rpx;
  width: 300rpx;
}


.exitButton {
  position: fixed;
  bottom: 150rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 50rpx;
  border-radius: 40rpx;
  background-color: #f0f1ff;
  color: black;
  text-align: center;
  width: 600rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100rpx;
  justify-content: center;

  outline-style: solid;
  outline-color: transparent;
  box-shadow: 0 0 0 4rpx #5a01a7;
  transition: 0.7s;
}
